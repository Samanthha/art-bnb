<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "https://res.cloudinary.com/dkbbawtjw/image/upload/v1589987923/art-bnb/logo_svfszf.png"%>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Messages", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://res.cloudinary.com/dkbbawtjw/image/upload/v1589987704/art-bnb/default_icon_c0dy7j.png", class: "ml-2 border avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "List a Painting", new_painting_path, class: "dropdown-item" %>
            <%= link_to "My Profile", profile_path,  class: "dropdown-item" %>
            <%= link_to "Incoming Requests", incoming_requests_path, class: "dropdown-item" %>
            <%= link_to "Outgoing Requests", outgoing_requests_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
      <div class="nav-item d-flex">
        <li>
          <%= link_to "Login", new_user_session_path, class: "nav-link mr-3" %>
        </li><li>
          <%= link_to "Sign-up", new_user_session_path, class: "nav-link" %>
        </li>
      </div>
      <% end %>
    </ul>
  </div>
</div>
