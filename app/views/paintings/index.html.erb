<html>
  <head>
    <link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">
  </head>

<body>
    <div id="header">
        <div id="headerContent">
            <h2>Rent a painting and look fancy!</h2>
              <%= form_tag paintings_path, method: :get do %>
                <%= text_field_tag :query,
                  params[:query],
                  class: "form-control",
                  placeholder: "Type a painting's title or painter"
                %>
                <%= submit_tag "Search", class: "btn btn-primary" %>
              <% end %>
        </div>
    </div>

<div class="p-4">
    <div class="grid">
      <% @paintings.each do |painting| %>
        <div class="grid-item">
          <%= link_to painting_path(painting), class: "card-product" do %>
          <%= cl_image_tag painting.photo.key, height: 300, width: 400, crop: :fill %>

            <ul class="card-product-infos">
              <li><h2><%= painting.name %></h2></li>
              <li><i class="fas fa-palette"></i> <%= painting.painter %></li>
              <li><i class="fas fa-tape"></i> <%= painting.dimensions %></li>
              <li><i class="fas fa-tag"></i> $<%= painting.price_per_day %> per day</li>
            </ul>
          <% end %>
        </div>
      <% end %>
    </div>
</div>
